#!/usr/bin/env bash

# Check if script is run with sudo
if [ "$(id -u)" -ne 0 ]; then
    echo "This script must be run with sudo."
    exit 1
fi

# Backup the original hosts file
cp /etc/hosts /etc/hosts.bak

# Add or update entries for localhost and facebook.com
sed -i '/localhost/s/^.*$/127.0.0.2\tlocalhost/' /etc/hosts
sed -i '/facebook.com/s/^.*$/8.8.8.8\tfacebook.com/' /etc/hosts
